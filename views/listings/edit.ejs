<% layout("/layouts/boilerplate") -%>
<style>
     @media (max-width : 575px) {
        .offset-2{
         position: relative !important;
         left: -50px !important;
      }
        .desc{
            height: 10rem;
            
        }
        .image-listing{
            height: 250px;
            width: 250px;
        }

     }
</style>

<body>
    <div class="row mt-3">
        <div class="col-sm-8 offset-2" >
            <h3>Edit listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data" >
        
                <div class="mb-3">
                    <label class="from-label" for="title">Title</label>
                    <input type="text" name =listing[title] value="<%= listing.title %>" class="form-control" id="title" required>
                    <div class="valid-feedback">Title Looks Good</div>
                    <div class="invalid-feedback">Title should be required</div>
                </div>
                <div class="mb-3">
                    <label class="from-label" for="description">Description</label>
                    <textarea name =listing[description] id="description" class="form-control desc" required> <%= listing.description %></textarea>
                    <div class="invalid-feedback">Description should be valid</div>
                </div>
                <div class="mb-3">
                    Original Listing Image<br>
                    <img src="<%= originalImageUrl %>" class="image-listing">              
                </div>
                 <div class="mb-3">
                    <label class="from-label " for="image">Image</label>
                    <input type="file" name ="listing[image]" class="form-control" id="image" >
                    
                    
                 </div>
                 <div class="row">
                    <div class="mb-3 col-md-4">
                        <label class="from-label" for="price">Price</label>
                        <input type="text" name =listing[price] value="<%= listing.price %>" class="form-control" id="price" required>
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label class="from-label" for="country">Country</label>
                        <input type="text" name =listing[country] value="<%= listing.country %>" class="form-control" id="country" required>
                        <div class="invalid-feedback">Country should be valid</div>
                    </div>
                </div>
                 <div class="mb-3">
                    <label class="from-label" for="loaction">Location</label>
                    <input type="text" name =listing[location] value="<%= listing.location %>" class="form-control" id="location" required>
                    <div class="invalid-feedback">Loaction should be valid</div>
                 </div>
               <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
        
            </form>
        </div>
    </div>
   
    
</body>
