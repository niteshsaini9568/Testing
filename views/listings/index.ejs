<% layout("/layouts/boilerplate") -%>

<style>
    #filters{
         display: flex;
         /* flex-wrap: wrap; */ 
        text-align: center;
        overflow-x: auto;  
       
   
    }
    .filter{
        min-width: 6rem;
        width: 6rem;
        
        
        margin-top: 2rem;
        opacity: 0.7;
    }
    .filter::-webkit-scrollbar{
        width: 0;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
        text-decoration: underline;
    }
    .filter a {
        text-decoration: none;
        color: black;
    }

    .filter p {
        font-size: 0.8rem;

    }

    .tax-info {
        display: none;
    }
    .tax-toggle{
    position: sticky;
    
     border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    /* margin-left: 3rem; */
    display: flex;
    min-width: 250px;
    width: content;
    margin-top: 1.5rem;
    align-items: center;
    }
</style>


    <!-- <h3>All Listings</h3> -->
    <!-- <form method="GET" action="/listings/new">
        <button>Add new listing</button>
    </form> -->
    <div id="filters">
        <div class="filter">
            <a href="/listings/categorie/Trending">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending<p>
                </a>
            
        </div>
        <div class="filter">
            <a href="/listings/categorie/Rooms">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </a>
        </div>
        <div class="filter">
            <a href="/listings/categorie/Iconic City">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic City</p>
        </a>
        </div>
        <div class="filter">
            <a href="/listings/categorie/Mountains">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </a>
        </div>
        <div class="filter">
            <a href="/listings/categorie/Camping">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </a>
        </div>
        <div class="filter">
            <a href="/listings/categorie/Farms">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </a>
        </div>
        <div class="filter">
            <a href="/listings/categorie/Castles">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </a>
        </div>
        <div class="filter">
            <a href="/listings/categorie/Amazing Pools">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </a>
        </div>
        <div class="filter">
            <a href="/listings/categorie/Arctic">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </a>
        </div>
        <div class="filter">
            <a href="/listings/categorie/Domes">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </a>
        </div>
        <div class="filter">
            <a href="/listings/categorie/Boats">
                <div><i class="fa-solid fa-ship"></i></div>
                <p>Boats</p>
            </a>
        </div>

        <div class="tax-toggle ">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Dispay total after taxes</label>
            </div>
        </div>
    
        
    </div>
   
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <%  for(let listing of allListings){ %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card" >
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 18rem;">
                
                <div class="card-body mt-2">
                    <p class="card-text">
                       <b> <%= listing.title %> </b><br>
                        &#8377;<%=listing.price.toLocaleString("en-IN") %>/night
                        <i class="tax-info"> &nbsp;&nbsp; +18% GST </i>
                    
                    </p>
                </div>
                <div class="card-img-overlay"></div>
                
            </div>   
             

    <% } %>  
    </div>      
                
                
<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline"
            }else {
                info.style.display = "none"
            }
        }
    })
    
</script>

   
    



