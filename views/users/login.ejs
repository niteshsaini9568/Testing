<%- layout("/layouts/boilerplate") %>
<style>
    @media (max-width : 575px) {
        .offset-3{
        position: relative ;
        left: -80px ;
    }
    }
</style>
<div class="row mt-3">
    <div class="col-6 offset-3"><h1>Login</h1></div>
    <div class="col-md-6 offset-3">
        <form method="POST" action="/login" novalidate class="needs-validation">

            <div class="mb-3">
                <label class="from-label" for="username" >username</label>
                <input type="text" name ="username"  id="username" class="form-control" required>
                
            </div>
            
            <div class="mb-3">
                <label class="from-label" for="password" >password</label>
                <input type="password" name ="password"  id="password" class="form-control" required>
                <div class="invalid-feedback">Password should be Valid</div>
            </div>
            <button class="btn btn-success">Login</button>

        </form>

    </div>
</div>