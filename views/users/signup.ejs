<%- layout("/layouts/boilerplate") %>
<style>
    @media (max-width : 575px) {
        .offset-3{
        position: relative ;
        left: -80px ;
    }
    }
</style>
<div class="row mt-3">
    <div class="col-md-6 offset-3"><h1>Signup for Wanderlust</h1></div>
    <div class="col-md-6 offset-3">
        <form method="POST" action="/signup" novalidate class="needs-validation">

            <div class="mb-3">
                <label class="from-label" for="username" >username</label>
                <input type="text" name ="username"  id="username" class="form-control" required>
                <div class="valid-feedback">Looks Good</div>
                <div class="invalid-feedback">username should be required</div>
            </div>
            <div class="mb-3">
                <label class="from-label" for="email" >email</label>
                <input type="email" name ="email"  id="email" class="form-control" required>               
            </div>
            <div class="mb-3">
                <label class="from-label" for="password" >password</label>
                <input type="password" name ="password"  id="password" class="form-control" required>
                <div class="invalid-feedback">Password should be required</div>
            </div>
            <button class="btn btn-success">Signup</button>

        </form>

    </div>
</div>