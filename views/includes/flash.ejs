<style>
    .flashMsg {
        text-align: center;

    }
    @media (max-width : 575px) {

        .flashMsg{
            width: 100%;
        }
        .offset-3{
        position: relative ;
        left: -80px ;
    }
        
    }
</style>

<% if(successMessage && successMessage.length) {%>
    <div class="alert alert-success alert-dismissible fade show col-md-6 offset-3 flashMsg">
        <%= successMessage %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    
<% } %>

<% if(errorMessage && errorMessage.length) {%>
    <div class="alert alert-danger alert-dismissible fade show col-md-6 offset-3 flashMsg">
        <%= errorMessage %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    
<% } %>